<html>
<head>
    <title>Gerador de PDF</title>
    <script src="https://cdn.tailwindcss.com"></script>
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.3/css/all.min.css"></link>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/jspdf/2.3.1/jspdf.umd.min.js"></script>
    <script>
        function generatePDF() {
            const { jsPDF } = window.jspdf;
            const doc = new jsPDF();

            const sections = ['Introdução', 'Objetivos', 'Desenho', 'Metodologia', 'Riscos'];
            sections.forEach((section, index) => {
                const text = document.getElementById(section.toLowerCase()).value;
                doc.text(section, 10, 10 + (index * 30));
                doc.text(text, 10, 20 + (index * 30));
            });

            doc.save('documento.pdf');
        }
    </script>
</head>
<body class="bg-gray-100 p-6">
    <div class="max-w-4xl mx-auto bg-white p-8 rounded-lg shadow-lg">
        <h1 class="text-2xl font-bold mb-6">Gerador de PDF</h1>

        <div class="mb-4">
            <label for="introducao" class="block text-lg font-medium text-gray-700">Introdução</label>
            <textarea id="introducao" rows="4" class="mt-1 block w-full p-2 border border-gray-300 rounded-md"></textarea>
        </div>

        <div class="mb-4">
            <label for="objetivos" class="block text-lg font-medium text-gray-700">Objetivos</label>
            <textarea id="objetivos" rows="4" class="mt-1 block w-full p-2 border border-gray-300 rounded-md"></textarea>
        </div>

        <div class="mb-4">
            <label for="desenho" class="block text-lg font-medium text-gray-700">Desenho</label>
            <textarea id="desenho" rows="4" class="mt-1 block w-full p-2 border border-gray-300 rounded-md"></textarea>
        </div>

        <div class="mb-4">
            <label for="metodologia" class="block text-lg font-medium text-gray-700">Metodologia</label>
            <textarea id="metodologia" rows="4" class="mt-1 block w-full p-2 border border-gray-300 rounded-md"></textarea>
        </div>

        <div class="mb-4">
            <label for="riscos" class="block text-lg font-medium text-gray-700">Riscos</label>
            <textarea id="riscos" rows="4" class="mt-1 block w-full p-2 border border-gray-300 rounded-md"></textarea>
        </div>

        <button onclick="generatePDF()" class="w-full bg-blue-500 text-white py-2 px-4 rounded-md hover:bg-blue-600">
            <i class="fas fa-file-pdf"></i> Gerar PDF
        </button>
    </div>
</body>
</html>
